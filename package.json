{
  "name": "bond-dev",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "rm -rf app/",
    "grunt": "node -e 'require(\"grunt\").tasks([\"default\"], {})'",
    "nw-gyp-repair": "./scripts/nw-gyp-repair.sh",
    "install-nw-osx": "./scripts/install-nw-osx.sh && npm run-script update-osx-app",
    "update-osx-app": "./scripts/update-osx-app.sh",
    "build": "npm run-script grunt && cd app && npm install && cd .. && npm run-script nw-gyp-repair",
    "start": "/Applications/Bond.app/Contents/MacOS/node-webkit app",
    "start-dev": "npm run-script grunt && npm run-script start",
    "start-compiled": "npm run-script grunt && npm run-script update-osx-app && open /Applications/Bond.app"
  },
  "dependencies": {
    "grunt": "~0.4.1",
    "grunt-contrib-jade": "~0.8.0",
    "grunt-contrib-less": "~0.7.0",
    "grunt-contrib-copy": "~0.4.1",
    "grunt-contrib-concat": "~0.3.0",
    "nw-gyp": "~0.10.9"
  },
  "devDependencies": {
    "grunt-grunticon": "~0.6.12"
  }
}
